{
  "name": "viberunner",
  "private": true,
  "packageManager": "npm@10.3.0",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "supabase start && turbo run generate build --filter=@viberunner/db --filter=@viberunner/shared && npm run db:push && concurrently -n API,WORKER -c blue,magenta \"npm run api:dev\" \"npm run worker:dev\"",
    "dev:services": "concurrently -n API,WORKER -c blue,magenta \"npm run api:dev\" \"npm run worker:dev\"",
    "shared:build": "npm run build --workspace=@viberunner/shared",
    "db:build": "npm run build --workspace=@viberunner/db",
    "db:start": "supabase start && npm run db:generate && npm run db:build && npm run db:push",
    "db:stop": "supabase stop",
    "db:status": "supabase status",
    "db:reset": "supabase db reset && npm run db:generate && npm run db:push",
    "db:studio": "open http://127.0.0.1:54423",
    "db:generate": "npm run generate --workspace=@viberunner/db",
    "db:push": "npm run push --workspace=@viberunner/db",
    "db:migrate": "npm run migrate --workspace=@viberunner/db",
    "api:dev": "npm run dev --workspace=@viberunner/api",
    "api:build": "npm run build --workspace=@viberunner/api",
    "worker:dev": "npm run dev --workspace=@viberunner/worker",
    "worker:build": "npm run build --workspace=@viberunner/worker",
    "build": "npm run api:build && npm run worker:build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run typecheck && npm run lint:check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsc-files": "^1.1.4",
    "turbo": "^2.6.3",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.49.0"
  }
}
